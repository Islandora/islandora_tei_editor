{
    z-index:25; 
    background-color:#ccc;
}

DATE:hover tooltip, BIRTH:hover tooltip, DEATH:hover tooltip, AGE:hover tooltip, EVENT:hover tooltip
{
    display:block;
    position:absolute;
    top:2em; left:0;
    border:1px solid #0cf;
    background-color:#cff; color:#000;
    text-align: center;
}

